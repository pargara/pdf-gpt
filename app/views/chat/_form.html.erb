
<div>
    <%= form_tag('/chat/send_message', method: :post, remote: true) do %>
        <%= text_field_tag :content, nil, placeholder: 'Escribe tu mensaje...', class: 'border border-gray-300 rounded-md p-2 mr-2' %>
        <%= submit_tag 'Enviar', class: 'btn btn-primary bg-blue-500 text-white px-4 py-2 rounded-md' %>
    <% end %>
</div>